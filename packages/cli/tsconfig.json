{
  "compilerOptions": {
    "declaration": true,
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "target": "ES2020",
    "strict": true,
    "rootDir": "src",
    "outDir": "./dist",
    "noEmit": true,
    "types": ["node", "jest", "chai"],
    "lib": ["ES2020"]
  },
  "include": ["src"]
}
