{
  "name": "@condohub/jest-config",
  "version": "1.0.0",
  "description": "Reusable Jest config and transformers",
  "author": {
    "email": "info@condohub.ca",
    "name": "CondoHub",
    "url": "https://github.com/condohub/condohub"
  },
  "repository": {
    "directory": "packages/jest-config",
    "type": "git",
    "url": "https://github.com/condohub/condohub.git"
  },
  "license": "MIT",
  "files": [
    "/src",
    "/dist"
  ],
  "scripts": {
    "build": "npm run tsc:types && npm run swc:build && npm run swc:build:commonjs && npm run rename:commonjs",
    "clean": "npm run clean:dist && npm run clean:tsc",
    "clean:dist": "rimraf -rf dist/**",
    "clean:tsc": "rimraf -f ./**/*.tsbuildinfo *.tsbuildinfo",
    "rename:commonjs": "renamer --chain ../node-utils/src/scripts/rename-cjs-extension.js \"./dist/cjs/**/*\"",
    "rename:watch": "nodemon --delay 1000 --watch dist/cjs --ext js --exec \"npm run rename:commonjs\"",
    "prestart": "npm run build",
    "start": "concurrently \"npm run tsc:types:watch\" \"npm run swc:build:watch\" \"npm run swc:build:commonjs:watch\" \"npm run rename:watch\"",
    "swc:build": "swc ./src --config-file ../../.swcrc --source-maps --ignore **/__test__/**/* --out-dir dist",
    "swc:build:commonjs": "npm run swc:build --config-file ../../.swcrc-commonjs --out-dir dist/cjs",
    "swc:build:commonjs:watch": "npm run swc:build:commonjs --watch",
    "swc:build:watch": "npm run swc:build --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "tsc:typecheck": "tsc --noEmit",
    "tsc:types": "npm exec tsc -b",
    "tsc:types:watch": "npm run tsc:types --watch --preserveWatchOutput"
  },
  "exports": {
    ".": {
      "import": {
        "default": "./dist/index.js",
        "types": "./dist/index.types.d.ts"
      },
      "require": {
        "default": "./dist/cjs/index.cjs",
        "types": "./dist/index.types.d.cts"
      }
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "type": "module",
  "types": "dist/index.types.d.ts",
  "dependencies": {
    "@babel/core": "^7",
    "@mdx-js/mdx": "^1.6.18",
    "@testing-library/jest-dom": "^5",
    "@testing-library/react": "^13",
    "babel-jest": "^27.0.6"
  }
}
