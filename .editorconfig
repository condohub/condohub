# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 100
trim_trailing_whitespace = true

[*.{css,less,scss}]
indent_size = 2

[*.json]
indent_size = 2

[*.md]
max_line_length = 80
trim_trailing_whitespace = false

[CHANGELOG.md]
max_line_length = 120

[COMMIT_EDITMSG]
max_line_length = 80
